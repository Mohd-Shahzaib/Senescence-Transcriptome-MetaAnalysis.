suppressPackageStartupMessages({
  # Core DE & Batch Correction
  library(DESeq2)
  library(limma)
  library(sva)
  # Data Handling
  library(tidyverse)
  library(dplyr)
  library(readr)
  library(tidyr)
  library(tibble)
  library(purrr)
  library(stringr)
  # Visualization
  library(ggplot2)
  library(ggrepel)
  library(pheatmap)
  library(ggvenn)
  library(VennDiagram)
  library(grid)
  # Functional Enrichment & Annotation
  library(clusterProfiler)
  library(ReactomePA)
  library(org.Hs.eg.db)
  library(AnnotationDbi)
  # Bioconductor Infrastructure
  library(Biobase)
  library(SummarizedExperiment)
  library(MatrixGenerics)
  library(IRanges)
  library(S4Vectors)
  library(GenomeInfoDb)
  # Shrinkage Methods
  library(apeglm)
  library(ashr)
})

sink("sessionInfo.txt")
print(sessionInfo())
sink()
